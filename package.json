{
	"name": "require-js",
	"displayName": "Require Module Support",
	"description": "Adds require.js AMD module goto definition support.",
	"version": "0.1.6",
	"publisher": "lici",
	"icon": "logo.png",
	"engines": {
		"vscode": "^1.5.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:javascript",
		"onCommand:requireModuleSupport.goToDefinitionModule"
	],
	"main": "./extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Require Module Support",
			"properties": {
				"requireModuleSupport.modulePath": {
					"type": "string",
					"default": "",
					"description": "Module path relative to workspace root"
				},
				"requireModuleSupport.onlyNavigateToFile": {
					"type": "boolean",
					"default": false,
					"description": "Should we search inside the landing file?"
				}
			}
		},
        "commands": [
            {
                "command": "requireModuleSupport.goToDefinitionModule",
                "title": "Go to Definition Module"
            }
		],
		"keybindings": [
			{
				"command": "requireModuleSupport.goToDefinitionModule",
				"key": "f12",
				"when": "editorLangId == javascript"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "requireModuleSupport.goToDefinitionModule",
					"alt": "editor.action.goToDeclaration",
					"when": "editorLangId == javascript",
					"group": "navigation"
				}
			],
			"commandPalette": [
				{
					"command": "requireModuleSupport.goToDefinitionModule",
					"when": "editorLangId == javascript"
				}
			]
		}
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/anacierdem/vscode-requirejs.git"
	},
	"scripts": {
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "node ./node_modules/vscode/bin/test",
		"lint": "node ./node_modules/eslint/bin/eslint extension.js test"
	},
	"devDependencies": {
		"goodparts": "^1.2.1",
		"decache": "^4.1.0",
		"eslint": "^4.4.0",
		"istanbul": "^0.4.5",
		"mocha": "^3.5.0",
		"proxyquire": "^1.8.0",
		"remap-istanbul": "^0.9.5",
		"sinon": "^3.0.0",
		"typescript": "^2.4.2",
		"vscode": "^1.0.0"
	}
}
